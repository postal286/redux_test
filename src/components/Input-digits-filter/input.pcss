

.input {

  &-filter-wrapper {
    display: flex;
    margin: 0 auto;
    justify-content: center;
  }

  &-filter {
    padding: 20px;
    font-size: 15px;
    border-radius: 2px;
    border: 2px solid lightgray;
  }

  &-filter-clear {
    padding: 20px;
    margin-left: 20px;
    text-transform: uppercase;
  }

}

